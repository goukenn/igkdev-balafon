            "attrs"=>[]
        ],
        "use_comnon_mod"=>["type"=>"checkbox",
            "label_text"=>__("Use Common modules"),
            "value"=>1
        ]
    ];
$frm->addFormFields($formfields);
$frm->addActionBar()->addInput("btn.submit", "submit");
